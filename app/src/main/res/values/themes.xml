<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryCircle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/text_icons</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/light_primary_color</item>
        <item name="colorOnSecondary">@color/primary_color</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/divider_color</item>
        <item name="colorOnError">@color/dark_primary_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_color</item>

        <!-- Text color -->
        <item name="storyCircleTextColorPrimary">@color/primary_text</item>
        <item name="storyCircleTextColorPrimaryVariant">@color/white</item>
        <item name="storyCircleTextColorSecondary">@color/secondary_text</item>
    </style>

    <style name="Theme.StoryCircle.NoActionBar" parent="Theme.StoryCircle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <!-- Customize the box stroke width and color -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/primary_text</item>

        <!-- Customize the hint text color -->
        <item name="hintTextColor">@color/secondary_text</item>

        <!-- Customize the focused color -->
        <item name="boxBackgroundColor">@color/light_primary_color</item>

        <!-- Customize the error text color -->
        <item name="errorTextColor">@color/teal_200</item>
    </style>



    <style name="Theme.StoryCircle.FullScreen" parent="Theme.StoryCircle">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>